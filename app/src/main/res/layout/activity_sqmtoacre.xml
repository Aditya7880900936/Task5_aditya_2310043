<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/SqmtoAcre"
    android:background="@color/white"
    tools:context=".sqmtoacre">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert m.sq. to acre"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_sq_Text"
        android:ems="10"
        android:textColorHint="@color/grey"

        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:hint="Enter the Area in m.sq."
        android:layout_marginTop="35dp"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Convert to Acre"
        android:id="@+id/AcreConvertor"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AcreResult"
        android:text=""
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To HomePage"
        android:id="@+id/Home_Button"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/data6"/>


</LinearLayout>

